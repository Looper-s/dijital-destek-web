---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const hizmetler = [
  { baslik: 'Dijital Strateji Danışmanlığı', aciklama: 'İşletmeniz için özel dijital dönüşüm stratejileri geliştiriyoruz.', icon: 'strategy' },
  { baslik: 'Süreç Otomasyonu', aciklama: 'İş süreçlerinizi otomatikleştirerek verimliliği artırıyoruz.', icon: 'automation' },
  { baslik: 'Veri Analitiği', aciklama: 'Verilerinizi analiz ederek, daha iyi kararlar almanıza yardımcı oluyoruz.', icon: 'analytics' },
  { baslik: 'Bulut Çözümleri', aciklama: 'Bulut tabanlı çözümlerle işletmenizi daha esnek ve ölçeklenebilir hale getiriyoruz.', icon: 'cloud' },
  { baslik: 'Siber Güvenlik', aciklama: 'İşletmenizin dijital varlıklarını en üst düzeyde koruyoruz.', icon: 'security' },
  { baslik: 'Mobil Uygulama Geliştirme', aciklama: 'İşletmeniz için özel mobil uygulamalar geliştiriyoruz.', icon: 'mobile' },
];

const referanslar = [
  { isim: 'ABC Şirketi', logo: '/images/logos/abc.png' },
  { isim: 'XYZ Holding', logo: '/images/logos/xyz.png' },
  { isim: '123 Teknoloji', logo: '/images/logos/123.png' },
  { isim: 'Mega Grup', logo: '/images/logos/mega.png' },
];
---

<Layout title="Hizmetlerimiz | E-Dönüşüm Projesi">
  <Header />
  <main class="bg-gradient-to-b from-primary-50 to-secondary-50 py-20">
    <div class="container mx-auto px-4 max-w-6xl">
      <h1 class="text-4xl sm:text-5xl font-bold mb-12 text-center text-gray-800">
        <span class="font-future text-primary-600 block mb-2">Hizmetlerimiz</span>
        E-Dönüşüm Çözümleri
      </h1>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {hizmetler.map((hizmet) => (
          <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
            <div class="text-primary-600 mb-4">
              <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clipRule="evenodd"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-semibold mb-4 text-primary-600">{hizmet.baslik}</h2>
            <p class="text-gray-600">{hizmet.aciklama}</p>
          </div>
        ))}
      </div>

      <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Referanslarımız</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {referanslar.map((referans) => (
          <div class="bg-white p-6 rounded-xl shadow-md flex items-center justify-center">
            <img src={referans.logo} alt={referans.isim} class="max-h-16" />
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');
</style>