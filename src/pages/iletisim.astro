---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const contactInfo = [
  { icon: 'map-pin', info: 'Atatürk Caddesi No:123, 34000 İstanbul, Türkiye' },
  { icon: 'phone', info: '+90 (212) 123 45 67' },
  { icon: 'mail', info: 'info@edonusum.com' },
];

const socialMedia = [
  { name: 'Facebook', icon: 'facebook', url: 'https://facebook.com' },
  { name: 'Twitter', icon: 'twitter', url: 'https://twitter.com' },
  { name: 'LinkedIn', icon: 'linkedin', url: 'https://linkedin.com' },
  { name: 'Instagram', icon: 'instagram', url: 'https://instagram.com' },
];

function getIconPath(icon: string): string {
  switch(icon) {
    case 'map-pin':
      return "M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z M12 7a3 3 0 1 0 0 6 3 3 0 0 0 0-6z";
    case 'phone':
      return "M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z";
    case 'mail':
      return "M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z M22 6l-10 7L2 6";
    case 'facebook':
      return "M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z";
    case 'twitter':
      return "M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z";
    case 'linkedin':
      return "M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z M2 9h4v12H2z M4 2a2 2 0 1 1-2 2 2 2 0 0 1 2-2z";
    case 'instagram':
      return "M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z M17.5 6.5h.01 M7.5 2h9a5.5 5.5 0 0 1 5.5 5.5v9a5.5 5.5 0 0 1-5.5 5.5h-9A5.5 5.5 0 0 1 2 16.5v-9A5.5 5.5 0 0 1 7.5 2z";
    default:
      return "";
  }
}
---

<Layout title="İletişim | E-Dönüşüm Projesi">
  <Header />
  <main class="bg-gradient-to-b from-primary-50 to-secondary-50 py-20 pt-32"> <!-- pt-32 eklendi -->
    <div class="container mx-auto px-4 max-w-6xl">
      <h1 class="text-4xl sm:text-5xl font-bold mb-12 text-center text-gray-800">
        İletişime Geçin
      </h1>
      <div class="grid md:grid-cols-2 gap-12">
        <div class="bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-2xl font-semibold mb-6 text-gray-800">Bize Ulaşın</h2>
          <form>
            <div class="mb-6">
              <label for="name" class="block mb-2 text-sm font-medium text-gray-700">Ad Soyad</label>
              <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500" required>
            </div>
            <div class="mb-6">
              <label for="email" class="block mb-2 text-sm font-medium text-gray-700">E-posta</label>
              <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500" required>
            </div>
            <div class="mb-6">
              <label for="subject" class="block mb-2 text-sm font-medium text-gray-700">Konu</label>
              <input type="text" id="subject" name="subject" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500" required>
            </div>
            <div class="mb-6">
              <label for="message" class="block mb-2 text-sm font-medium text-gray-700">Mesajınız</label>
              <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500" required></textarea>
            </div>
            <button type="submit" class="w-full bg-primary-600 text-white font-bold py-3 px-4 rounded-md transition duration-300 hover:bg-primary-700">
              Gönder
            </button>
          </form>
        </div>
        <div>
          <div class="bg-white p-8 rounded-2xl shadow-lg mb-8">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800">İletişim Bilgileri</h2>
            <ul class="space-y-4">
              {contactInfo.map(item => (
                <li class="flex items-center">
                  <svg class="w-6 h-6 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIconPath(item.icon)}></path>
                  </svg>
                  <span class="text-gray-600">{item.info}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="bg-white p-8 rounded-2xl shadow-lg">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800">Bizi Takip Edin</h2>
            <div class="flex space-x-4">
              {socialMedia.map(platform => (
                <a href={platform.url} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary-600 transition duration-300">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d={getIconPath(platform.icon)}></path>
                  </svg>
                  <span class="sr-only">{platform.name}</span>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
      <div class="mt-12">
        <h2 class="text-2xl font-semibold mb-6 text-center text-gray-800">Bizi Haritada Bulun</h2>
        <div class="bg-white p-4 rounded-2xl shadow-lg">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.1394477677726!2d28.977554315415613!3d41.03798497929861!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7650656bd63%3A0x8ca058b28c20b6c3!2zVGFrc2ltIE1leWRhbsSxLCBHw7xtw7zFn3N1eXUsIDM0NDM1IEJleW_En2x1L8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1623234211451!5m2!1str!2str" 
            width="100%" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy">
          </iframe>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>