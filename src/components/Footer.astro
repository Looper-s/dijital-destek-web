---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { title: 'Şirket', links: [
    { name: 'Hakkımızda', url: '/hakkimizda' },
    { name: 'Kariyer', url: '/kariyer' },
    { name: 'İletişim', url: '/iletisim' },
  ]},
  { title: 'Hizmetler', links: [
    { name: 'E-Dönüşüm Danışmanlığı', url: '/hizmetler#e-donusum' },
    { name: 'Dijital Strateji', url: '/hizmetler#dijital-strateji' },
    { name: 'Veri Analitiği', url: '/hizmetler#veri-analitigi' },
  ]},
  { title: 'Kaynaklar', links: [
    { name: 'Blog', url: '/blog' },
    { name: 'E-Kitaplar', url: '/kaynaklar#e-kitaplar' },
    { name: 'Webinarlar', url: '/kaynaklar#webinarlar' },
  ]},
];

const socialLinks = [
  { name: 'Facebook', url: 'https://facebook.com', icon: 'fab fa-facebook-f' },
  { name: 'Twitter', url: 'https://twitter.com', icon: 'fab fa-twitter' },
  { name: 'LinkedIn', url: 'https://linkedin.com', icon: 'fab fa-linkedin-in' },
  { name: 'Instagram', url: 'https://instagram.com', icon: 'fab fa-instagram' },
];
---

<footer class="bg-gray-900 text-white py-12">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			<div class="mb-8 md:mb-0">
				<h3 class="text-2xl font-bold mb-4">E-Dönüşüm Projesi</h3>
				<p class="text-gray-400 mb-4">Dijital dönüşümünüzü destekliyoruz.</p>
				<div class="flex space-x-4">
					{socialLinks.map((link) => (
						<a href={link.url} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition duration-300">
							<i class={link.icon}></i>
							<span class="sr-only">{link.name}</span>
						</a>
					))}
				</div>
			</div>
			{footerLinks.map((column) => (
				<div>
					<h4 class="text-lg font-semibold mb-4">{column.title}</h4>
					<ul class="space-y-2">
						{column.links.map((link) => (
							<li>
								<a href={link.url} class="text-gray-400 hover:text-white transition duration-300">{link.name}</a>
							</li>
						))}
					</ul>
				</div>
			))}
		</div>
		<div class="border-t border-gray-800 mt-8 pt-8 text-center">
			<p class="text-gray-400">&copy; {currentYear} E-Dönüşüm Projesi. Tüm hakları saklıdır.</p>
		</div>
	</div>
</footer>

<style>
	@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css');
</style>