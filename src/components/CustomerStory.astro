---
export interface Props {
  name: string;
  story: string;
  image: string;
}

const { name, story, image } = Astro.props;
---

<div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition duration-300 transform hover:-translate-y-1 border border-gray-100">
  <img src={image} alt={name} class="w-24 h-24 rounded-full mx-auto mb-4 object-cover border-4 border-blue-200" />
  <h3 class="text-xl font-semibold mb-4 text-gray-800 text-center">{name}</h3>
  <p class="text-gray-600 italic text-center">"<span class="text-blue-600">{story}</span>"</p>
</div>